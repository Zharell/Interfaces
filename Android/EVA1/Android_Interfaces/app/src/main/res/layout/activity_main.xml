<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Numero"
        android:layout_width="408dp"
        android:layout_height="118dp"
        android:layout_marginTop="104dp"
        android:background="#8BC34A"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/NumeroOld"
        android:layout_width="407dp"
        android:layout_height="100dp"
        android:background="#8BC34A"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Numero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/En7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Numero" />

    <Button
        android:id="@+id/En4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/En7" />

    <Button
        android:id="@+id/En1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/En4" />

    <Button
        android:id="@+id/En2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/En1"
        app:layout_constraintTop_toBottomOf="@+id/En5" />

    <Button
        android:id="@+id/En3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/En2"
        app:layout_constraintTop_toBottomOf="@+id/En6" />

    <Button
        android:id="@+id/En5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/En4"
        app:layout_constraintTop_toBottomOf="@+id/En8" />

    <Button
        android:id="@+id/En6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/En5"
        app:layout_constraintTop_toBottomOf="@+id/En9" />

    <Button
        android:id="@+id/En8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/En7"
        app:layout_constraintTop_toBottomOf="@+id/Numero" />

    <Button
        android:id="@+id/En9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/En8"
        app:layout_constraintTop_toBottomOf="@+id/Numero" />

    <Button
        android:id="@+id/En0"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/En1" />

    <Button
        android:id="@+id/EnPunto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="."
        app:layout_constraintStart_toEndOf="@+id/En0"
        app:layout_constraintTop_toBottomOf="@+id/En3" />

    <Button
        android:id="@+id/EoSuma"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/En9"
        app:layout_constraintTop_toBottomOf="@+id/Numero" />

    <Button
        android:id="@+id/EoResta"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/En6"
        app:layout_constraintTop_toBottomOf="@+id/EoSuma" />

    <Button
        android:id="@+id/EoMulti"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="x"
        app:layout_constraintStart_toEndOf="@+id/En3"
        app:layout_constraintTop_toBottomOf="@+id/EoResta" />

    <Button
        android:id="@+id/EoDivide"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/EnPunto"
        app:layout_constraintTop_toBottomOf="@+id/EoMulti" />

    <Button
        android:id="@+id/EoCE"
        android:layout_width="170dp"
        android:layout_height="57dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="CE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/En0" />

    <Button
        android:id="@+id/EoIgual"
        android:layout_width="171dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#9200BCD4"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/EoCE"
        app:layout_constraintTop_toBottomOf="@+id/EnPunto" />

</androidx.constraintlayout.widget.ConstraintLayout>