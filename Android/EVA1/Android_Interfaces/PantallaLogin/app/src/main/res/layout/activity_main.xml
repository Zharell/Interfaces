<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".LoginApp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/indice" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icon" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:background="#FCE77D"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/ECorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertop"
                android:ems="10"
                android:hint="Correo Electrónico"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:paddingTop="15dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/EPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borderbottom"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/ELogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#68814A"
                android:text="Login" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has olvidado tu contraseña"
                android:textColor="#4CAF50" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="----------------------------- o -----------------------------"
                android:textAlignment="center"
                android:textColor="#4CAF50" />

            <Button
                android:id="@+id/ERegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#68814A"
                android:text="Sign Up"
                android:textAlignment="center" />

    </LinearLayout>
</LinearLayout>